<header>
  <img src="/assets/img/burger_image.png" class="mb-3 img-fluid" id="burger_image">
  <h2 class="title">Eat Da Burger!</h2>
</header>

<div class="container">
  
  <div class="row">

    <div class="col-sm-5 mb-3">
      <ul class="list-group">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-5 devoured">
      <ul class="list-group devoured_ol">
        {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>


  <div class="row mt-3">
    <div class="col-sm-4 addBurger">
      <h2>Add a Burger</h2>
      <form id="create-form">
        <div class="form-group">
          <input type="text" id="newBurgerForm" name="burger_name">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>

  </div>
</div>

