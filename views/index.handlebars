<div class="container">

  <div class="row">

    <div class="col-sm-5">
      <ul class="list-group">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-5">
      <ul class="list-group">
        {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>


  <div class="row justify-content-center">
    <div class="col-sm-4">
      <h2>Add a Burger</h2>
      <form id="create-form">
        <div class="form-group">
          <label for="newBurgerForm">Burger:</label>
          <input type="text" id="newBurgerForm" name="burger_name">
        </div>
        <button type="submit">Submit</button>
      </form>
    </div>
  </div>
</div>

